{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@view": ["src/view"],
      "@view/*": ["src/view/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@router": ["src/router"],
      "@router/*": ["src/router/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@scss": ["src/assets/scss"],
      "@scss/*": ["src/assets/scss/*"],
      "@module": ["src/components"],
      "@module/*": ["src/components/*"],
      "@images/*": ["src/assets/images/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
